<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/admin/head %>
  </head>
  <body>
    <% if(typeof csrfToken !== "undefined"){ %>
    <input type="hidden" id="_csrf" value="<%= csrfToken %>" />
    <% } %> <% include ../../partials/admin/menu %>
    <% if(reportId){ %>
        <input type="hidden" id="reportId" value="<%= reportId %>" />
    <% } %>
    <div class="app-page-title">
      <div class="page-title-wrapper">
        <div class="page-title-heading">
          <div class="page-title-icon">
            <i class="pe-7s-plus text-success"> </i>
          </div>
          <div>
            Thêm
            <div class="page-title-subheading">
              Thêm phản hồi cho báo cáo.
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-content">
        <% if(responses && responses.length > 0){ %>
            <div>
                <p>Những phản hồi gần đây: </p>
                <% responses.forEach(response => { %>
                    <p class="page-title-subheading">- <%= response.text %>(<%= dateFormat(response.createdAt, 'd mmmm, yyyy') %>)</p>
                <% }) %>
            </div>
        <% } %>

      <div
        class="tab-pane tabs-animation fade active show"
        id="tab-content-1"
        role="tabpanel"
      >
        <div class="main-card mb-3 card">
          <div class="card-body">
            <h5 class="card-title">Thêm phản hồi</h5>
            <div class="position-relative row form-group">
              <label for="exampleEmail" class="col-sm-2 col-form-label"
                >Lí do</label
              >
              <div class="col-sm-10">
                <textarea class="form-control" id="resText"></textarea>
              </div>
            </div>

            <div class="position-relative row form-check">
              <div class="col-sm-10 offset-sm-2">
                <button id="submit" class="btn btn-secondary">Thêm</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% include ../../partials/admin/footer %>
    <script src="/js/admin/report/add-response.js"></script>
  </body>
</html>
