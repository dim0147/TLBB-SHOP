<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../partials/head %>
</head>

<body class="body-wrapper">
  <% include ../../partials/menu %>
<section class="ad-post bg-gray py-5">
    <div class="container">
        <% if(typeof csrfToken !== "undefined"){ %>
            <input type="hidden" id="_csrf" value="<%= csrfToken %>">
        <% } %>

        <% if(typeof error !== "undefined"){ %>
            <h1><%= error %></h1>
        <% } %>

        <% if(typeof property !== "undefined"){ %>
            <input type="hidden" id="idProperty" value="<%= property._id %>">
                <!-- Post Your ad start -->
                <fieldset class="border border-gary p-4 mb-5">
                        <div class="row">
                            <div id="alert" class="alert alert-primary d-none" role="alert">
                                A simple primary alert—check it out!
                            </div>
                            <div class="col-lg-12">
                                <h3>Chỉnh sửa Property <%= property.name %> của item <%= property.itemId.name %></h3>
                            </div>
                            <div class="col-lg-12">
                                <h6 class="font-weight-bold pt-4 pb-1">Tên:</h6>
                                <input id="name" type="text" name="name" class="border w-100 p-2 bg-white" value="<%= property.name %>">
                                
                                <h6 class="font-weight-bold pt-4 pb-1">Slug:</h6>
                                <input id="slug" type="text" name="slug" class="border w-100 p-2 bg-white" value="<%= property.slug %>">
                            

                                <button id="submit" type="submit" class="btn btn-info d-block mt-2"><i class="fas fa-save"></i>  Lưu</button>
                                </div>

                            
                            </div>
                        </div>
                </fieldset>
        <% } %>
    </div>
</section>
<!--============================
=            Footer            =
=============================-->

<% include ../../partials/footer %>
<script src="/js/admin/property/edit-property.js"></script>
</body>

</html>