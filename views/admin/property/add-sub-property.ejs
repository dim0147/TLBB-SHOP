<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../partials/head %>
</head>

<body class="body-wrapper">
  <% include ../../partials/menu %>
<section class="ad-post bg-gray py-5">
    <div class="container">
        <% if(typeof csrfToken !== "undefined"){ %>
            <input type="hidden" id="_csrf" value="<%= csrfToken %>">
        <% } %>
            <% if (typeof error !== 'undefined') { %>
                <h1><%= error %></h1>
            <% } %>

            <% if(typeof item !== 'undefined' && typeof properties !== 'undefined') { %>
                <!-- Post Your ad start -->
                <fieldset class="border border-gary p-4 mb-5">
                    <input type="hidden" id="idItem" value="<%= item._id %>">
                        <div class="row">
                            <div id="alert" class="alert alert-primary d-none" role="alert">
                                A simple primary alert—check it out!
                            </div>
                            <div class="col-lg-12">
                                <h3>Thêm Sub Property cho Item <%= item.name %></h3>
                            </div>
                            <div class="col-lg-12">
                                <h6 class="font-weight-bold pt-4 pb-1">Tên Sub Property:</h6>
                                <input id="name" type="text" name="name" class="border w-100 p-2 bg-white text-capitalize" placeholder="">
                                
                                <h6 class="font-weight-bold pt-4 pb-1">Property:</h6>
                                <select id="idProperty" name="item" id="inputGroupSelect" class="w-100">
                                    <% if (typeof properties !== "undefined"){ %>
                                        <% properties.forEach((property) =>{ %>
                                        <option value="<%= property._id %>"><%= property.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            

                                <button id="submit" type="submit" class="btn btn-info d-block mt-2"><i class="fas fa-plus"></i>  Thêm</button>
                                </div>

                            
                            </div>
                        </div>
                </fieldset>
            <% } %>
    </div>
</section>
<!--============================
=            Footer            =
=============================-->

<% include ../../partials/footer %>
<script src="/js/admin/property/add-sub-property.js"></script>
</body>

</html>