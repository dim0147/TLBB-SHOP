<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../partials/head %>
</head>

<body class="body-wrapper">
  <% include ../../partials/menu %>
<section class="ad-post bg-gray py-5">
    <div class="container">
        <% if(typeof csrfToken !== "undefined"){ %>
            <input type="hidden" id="_csrf" value="<%= csrfToken %>">
        <% } %>
        <% if(typeof error !== 'undefined'){ %>
            <h1><%= error %></h1>
        <% }else{ %>
            <!-- Post Your ad start -->
            <fieldset class="border border-gary p-4 mb-5">
                    <div class="row">
                        <div id="alert" class="alert alert-primary d-none" role="alert">
                            A simple primary alert—check it out!
                        </div>
                        <% if(typeof account !== 'undefined'){ %>
                            <input type="hidden" id="idAccount" value="<%= account._id %>">
                            <div class="col-lg-12">
                                <h3>Khoá tài khoản <%= account.c_name %></h3>
                            </div>
                            
                            <% if(typeof reasons !== 'undefined' && reasons.length > 0){ %>
                                <% reasons.forEach(function(reason){ %>
                                    <p><%= reason.reason %></p>
                                <% }) %>
                            <% } %>

                            <div class="col-lg-12">
                                <h6 class="font-weight-bold pt-4 pb-1">Lí do:</h6>
                                <select name="reason" id="selectReason" class="w-100" style="display: none;">
                                    <option value="Tài khoản giả mạo">Tài khoản giả mạo</option>
                                    <option value="Facebook liên hệ không đáng tin cậy">Facebook liên hệ không đáng tin cậy</option>
                                    <option value="Trùng lập tài khoản">Trùng lập tài khoản</option>
                                    <option value="Tài khoản không có thật">Tài khoản không có thật</option>
                                    <option value="Sử dụng ảnh giả mạo">Sử dụng ảnh giả mạo</option>
                                    <option value="Xúc phạm admin">Xúc phạm admin</option>
                                    <option value="Khác">Khác</option>                 
                                </select>
                            </div>

                            <div class="col-lg-12 d-none" id="divIpReason">
                                <h6 class="font-weight-bold pt-4 pb-1">Nhập lí do:</h6>
                                <input type="text" id="ipReason" class="border w-100 p-2 bg-white" >
                            </div>

                            <div class="col-lg-12 text-center" style="margin: 10px;">
                                <button id="submit" class="btn btn-warning"><i class="fas fa-lock"></i>  Khoá</button>
                            </div> 
                            <% } %>
                    </div>
                    </div>
            </fieldset>
        <% } %>
    </div>
    
</section>
<!--============================
=            Footer            =
=============================-->

<% include ../../partials/footer %>
<script src="/js/admin/account/add-lock-reason.js"></script>
</body>

</html>